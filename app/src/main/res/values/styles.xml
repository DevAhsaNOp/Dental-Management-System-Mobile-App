<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SpinnerTheme">
        <item name="android:textColor">#000</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="NavTextStyle">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TransparentScrollBarStyle">
        <item name="android:scrollbarThumbVertical">@android:color/transparent</item>
        <item name="android:scrollbarTrackVertical">@android:color/transparent</item>
    </style>

</resources>
